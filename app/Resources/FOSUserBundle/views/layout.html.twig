{% extends "::layout.html.twig" %}

{% block title %}
  User - {{ parent() }}
{% endblock %}

{% block body %}

<h2>User</h2>

	<hr>

	{% for type, messages in app.session.flashBag.all %}
	    {% for message in messages %}
	        <div class="{{ type }}">
	            {{ message|trans({}, 'FOSUserBundle') }}
	        </div>
	    {% endfor %}
	{% endfor %}

	<div>
	    {% block fos_user_content %}
	    {% endblock fos_user_content %}
	</div>

{% endblock body %}