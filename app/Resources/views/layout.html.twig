<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Entretien.local{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock stylesheets %}
</head>

<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
    <div id="navbar" class="navbar-collapse collapse">
      <div class="navbar-header">
        <span class="navbar-brand">
          Emilien T tro bo
        </span>
      </div>
        <div class="navbar-right navbar-form">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        Logged in as
        <a class="btn btn-success" href="{{ path('fos_user_profile_show') }}">
          {{ app.user.username }}
        </a>
        <a class="btn btn-success" href="{{ path('fos_user_security_logout') }}">
          Logout
        </a>
    {% else %}
        <a class="btn btn-success" href="{{ path('fos_user_security_login') }}">
          Login
        </a>
        <a class="btn btn-success" href="{{ path('fos_user_registration_register') }}">
          Register
        </a>
    {% endif %}
  </div>
  </div>
  </div>
  </nav>

  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Entretien.local: a news website</h1>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Pages</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('entretien_news_home') }}">Homepage</a></li>
          <li><a href="{{ path('entretien_news_add') }}">Add an advert</a></li>
        </ul>

        <h4>Lastest News</h4>
        {{ render(controller("EntretienNewsBundle:Advert:menu", {'limit': 3})) }}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock body %}
      </div>
    </div>

    <hr>

    <footer>
      <p>Entretien.local Â© {{ 'now'|date('Y') }}.</p>
    </footer>
  </div>

  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock javascripts %}

</body>
</html>